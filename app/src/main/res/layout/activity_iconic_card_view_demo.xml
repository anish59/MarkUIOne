<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOverlay"
    android:orientation="vertical">

    <customWidgets.IconicCardView
        android:id="@+id/iconicCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardElevation="8dp"
        app:imgHeight="80dp"
        app:imgSrc="@drawable/superman"
        app:imgWidth="80dp">
        <!--app:cardBgColor="@color/colorAccent"-->

    </customWidgets.IconicCardView>


    <Button
        android:id="@+id/btnShowYearPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="@string/show_year_picker" />

    <Button
        android:id="@+id/btnShowMonthPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="@string/show_month_picker" />

    <Button
        android:id="@+id/btnMyPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="@string/myPicker"
        android:textAllCaps="false" />
</LinearLayout>