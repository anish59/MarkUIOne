<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.markuione.animationDemo.morphing_anim.MorphActivity">

    <Button
        android:id="@+id/btnAnimateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="animate"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="6dp"
            android:src="@drawable/vector_add" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/vector_hamberg" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/vector_list_menu" />


    </LinearLayout>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset" />

    <Button
        android:id="@+id/btnDrawAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/draw" />

    <com.markuione.animationDemo.customViews.PathView
        android:id="@+id/path"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</LinearLayout>
